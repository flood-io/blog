{{!< default}}

{{> header}}
{{> menu}}

<main role="main"> 
  <div class="wrapper_purus">
    {{#post}} 
    <section class="banner_purus">
        <h1 class="posttitle_purus">{{title}}</h1>
    </section>
    
    <section id="nav">
        {{navigation}}
    </section>   
      
    <div class="postcontent_purus">
        {{content}} 
    </div>  
    {{/post}}
  </div>
</main>
    
<footer class="main-footer_purus" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <div class="wrapper-footer_purus">
        <div class="center-footer_purus">
            {{> custom/social-media this}}
        </div>
    </div>
    {{> footer}}
</footer>          
{{!< default}}

<header id="header" class="default {{#if tag.feature_image}}super-header{{/if}}">
    <button class="toggle-menu menu-left push-body">
    <i class="fa fa-bars"></i>
        {{#if @blog.logo}}
            <a class="logo_purus" href="{{@blog.url}}">
                <img src="{{@blog.logo}}" alt="{{@blog.title}}" />
            </a>
        {{/if}}
    </button>
</header>

{{> menu}}

<main role="main">
    <div class="postheader_purus {{#if tag.feature_image}} img-fullpage" style="background-image: url({{img_url tag.feature_image}}){{/if}}">
        <div class="vertical_purus">
          <section class="inner_purus">
              <h1>{{tag.name}}</h1>
               {{#if tag.description}}<p class="description_purus">{{tag.description}}</p>{{/if}}
              <p class="number-posts_purus">Number of posts&#58;&ensp;<span>{{pagination.total}}</span></p>
          </section>
        </div>
    </div>
    <div class="wrapper_purus">
        {{> loop}}
    </div>
</main>

<footer class="main-footer_purus" {{#if @blog.cover_image}}style="background-image: url({{@blog.cover_image}})"{{/if}}>
    <div class="wrapper-footer_purus">
        <div class="center-footer_purus">
            {{> custom/social-media this}}
        </div>
    </div>
    {{> footer}}
</footer>
